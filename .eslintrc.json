{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "React": "readonly",
    "JSX": "readonly"
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "ignorePatterns": [
    ".next/*",
    "node_modules/*",
    ".docker/*"
  ]
}